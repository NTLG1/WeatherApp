<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <!-- Set the tab text appearance to control text size and case -->
        <item name="tabTextAppearance">@style/CustomTabText</item>
    </style>

    <!-- Customize the appearance of the tab text -->
    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <!-- Turn off textAllCaps to prevent uppercase text -->
        <item name="textAllCaps">false</item>
    </style>

</resources>
